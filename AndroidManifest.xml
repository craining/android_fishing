<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zgy.fishing"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.GET_TASKS" />

    <uses-sdk
        android:minSdkVersion="4"
        android:targetSdkVersion="8" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.QQLoginActivity"
            android:label="@string/app_name" 
            android:screenOrientation="portrait" 
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".activity.TaobaoLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.TaobaoPayActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.RenRenLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.AliPayLoginActivity"
            android:label="@string/app_name" />
        <activity
            android:name=".activity.AliPayPayActivity"
            android:label="@string/app_name" />

        <service android:name=".ServiceListener" />
        
    </application>

</manifest>